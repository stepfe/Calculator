<resources>

    <style name="DarkTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">#000</item>
        <item name="colorPrimaryDark">#ffa600</item>
        <item name="colorAccent">#ffa600</item>
        <item name="android:actionBarSize">40dp</item>
        <item name="android:background">#000</item>
        <item name="titleTextColor">#ffa600</item>
        <item name="actionBarPopupTheme">@style/PopupMenuDarkTheme</item>
        <item name="android:statusBarColor">#ffa600</item>
        <item name="buttonStyle">@style/ButtonDarkTheme</item>
        <item name="editTextStyle">@style/EditViewDarkTheme</item>
        <item name="alertDialogTheme">@style/AlertDialogDarkTheme</item>
        <item name="android:textSize">25dp</item>
        <item name="checkboxStyle">@style/CheckBoxDarkTheme</item>
        <item name="radioButtonStyle">@style/RadioButtonDarkTheme</item>
        <item name="android:textColorSecondary">#ffa600</item>
    </style>

    <style name="AlertDialogDarkTheme" parent="@android:style/Theme.Dialog">
        <item name="colorAccent">#ffa600</item>
        <item name="android:textColor">#ffa600</item>
        <item name="android:background">#000</item>
        <item name="colorPrimary">#000</item>
        <item name="colorPrimaryDark">#ffa600</item>
        <item name="textColorAlertDialogListItem">#ffa600</item>
        <item name="android:listChoiceIndicatorSingle">@drawable/dark_radiobutton_selector</item>
        <item name="android:textColorPrimary">#ffa600</item>
    </style>

    <style name="CheckBoxDarkTheme" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/dark_radiobutton_selector</item>
    </style>

    <style name="RadioButtonDarkTheme" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@drawable/dark_radiobutton_selector</item>
    </style>

    <style name="PopupMenuDarkTheme" parent="android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">#000</item>
        <item name="android:listSelector">#ffa600</item>
        <item name="android:textColor">#ffa600</item>
    </style>

    <style name="ButtonDarkTheme" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">#000</item>
        <item name="android:textColor">#ffa600</item>
        <item name="android:textColorHint">#ffa600</item>
    </style>

    <style name="EditViewDarkTheme" parent="Widget.AppCompat.EditText">
        <item name="android:background">#333</item>
        <item name="android:textColor">#ffa600</item>
        <item name="android:textColorHint">#ffa600</item>
    </style>

